#!/usr/bin/env bash

if [ -z "$1" ]; then
  echo "Usage: $0 <service_name> [num_lines]"
  exit 1
fi

SERVICE="$1"
NUM_LINES="$2"

if [ -n "$NUM_LINES" ]; then
  docker compose -f compose.production.yml logs "$SERVICE" --timestamps -n "$NUM_LINES"
else
  docker compose -f compose.production.yml logs "$SERVICE" --timestamps
fi
