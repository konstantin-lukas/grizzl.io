{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@action/*": ["./src/action/*"],
            "@app/*": ["./src/app/*"],
            "@component/*": ["./src/component/*"],
            "@const/*": ["./src/const/*"],
            "@context": ["./src/context"],
            "@database/*": ["./src/database/*"],
            "@dictionary/*": ["./src/dictionary/*"],
            "@enum/*": ["./src/enum/*"],
            "@hook/*": ["./src/hook/*"],
            "@schema/*": ["./src/schema/*"],
            "@type/*": ["./src/type/*"],
            "@util/*": ["./src/util/*"],
            "@asset/*": ["./asset/*"],
            "@public/*": ["./public/*"],
            "@e2e/*": ["./test/e2e/*"],
            "@unit/*": ["./test/unit/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules", ".next"]
}
