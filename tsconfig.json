{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@actions/*": ["./src/actions/*"],
            "@app/*": ["./src/app/*"],
            "@components/*": ["./src/components/*"],
            "@const/*": ["./src/const/*"],
            "@database/*": ["./src/database/*"],
            "@enum/*": ["./src/enum/*"],
            "@hooks/*": ["./src/hooks/*"],
            "@schemas/*": ["./src/schemas/*"],
            "@types/*": ["./src/types/*"],
            "@utils/*": ["./src/utils/*"],
            "@assets/*": ["./assets/*"],
            "@public/*": ["./public/*"],
            "@e2e/*": ["./tests/e2e/*"],
            "@unit/*": ["./tests/unit/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules", ".next"]
}
